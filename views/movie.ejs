<% include partials/header %>
<link rel="stylesheet" href="/movie-style.css" type="text/css">

<div class="row heading">
  <div class="col-lg-9">
    <h3>Movie Details</h3>
  </div>
  <div class="col-lg-3 search-again">
    <i class="fa fa-search" aria-hidden="true"></i> <a href="/">Search again!</a>
  </div>
</div>

<div class="title"><%= data["Title"] %></div>

<div class="row">
  <div class="col-lg-10">
    <div class="left-subtitle">
      <div class="year"><%= data["Year"] %></div>
      <div class="runtime"><%= data["Runtime"] %></div>
      <div class="rated"><%= data["Rated"] %></div>
      <div class="genre"><%= data["Genre"] %></div>
    </div>
  </div>

  <div class="col-lg-2">
    <div class="row">
      <div class="col-lg-6">
        <i class="fa fa-star" aria-hidden="true"></i>
      </div>
      <div class="col-lg-6">
        <div class="right-subtitle">
          <div class="rating"><%= data["imdbRating"] %><span>/10</span></div>
          <div class="votes"><%= data["imdbVotes"] %></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row movie-details">
  <div class="col-lg-4">
    <div class="thumbnail">
      <img src="<%= data["Poster"] %>" alt="movie poster">
    </div>
  </div>

  <div class="col-lg-8">
    <div class="description">
      <div class="plot"><%= data["Plot"] %></div>

      <div class="info">
        <div class="director">Director: <%= data["Director"] %></div>
        <div class="writer">Writers: <%= data["Writer"] %></div>
        <div class="actors">Actors: <%= data["Actors"] %></div>
        <div class="awards">Awards: <%= data["Awards"] %></div>
      </div>

      <div class="trailer">
        <a href="https://www.youtube.com/results?search_query=<%= data["Title"] %>" target="-_blank" class="btn btn-danger" role="button">
          <i class="fa fa-video-camera" aria-hidden="true"></i> Related Videos
        </a>
      </div>

      <a href="<%= trailerLink %>">Youtube</a>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= watchID %>?rel=0" allowfullscreen></iframe>
      </div>

      <div class="additional-info">
        <p>Additional information</p>
        <div class="released">Release Date: <%= data["Released"] %></div>
        <div class="language">Language: <%= data["Language"] %></div>
        <div class="country">Country: <%= data["Country"] %></div>
      </div>
    </div>
  </div>
</div>


<% include partials/footer %>
